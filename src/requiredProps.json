{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A recipe scraped from the web",
    "type": "object",
    "required": ["name", "recipeIngredient", "recipeInstructions"],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1
        },
        "recipeIngredient": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
        },
        "recipeInstructions": {
            "type": "array",
            "minItems": 1,
            "items": {
                "properties": {
                    "@type": { "type": "string" },
                    "text": { "type": "string" }
                }
            }
        }
    }
}
